{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components": ["./src/components"],
      "components/*": ["./src/components/*"],
      "base": ["./src/components/base"],
      "base/*": ["./src/components/base/*"],
      "form": ["./src/components/form"],
      "form/*": ["./src/components/form/*"],
      "modules": ["./src/components/modules"],
      "modules/*": ["./src/components/modules/*"],
      "utils": ["./src/utils"],
      "utils/*": ["./src/utils/*"],
      "types": ["./src/types"],
      "types/*": ["./src/types/*"],
      "styles/*": ["../styles/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
